<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/isim"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/btnn"
        android:ems="10"
        android:hint="Kart Sahibi"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/kartno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/kartno"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/btnn"
        android:ems="10"
        android:hint="Kart NumarasÄ±"
        android:inputType="number"
        android:textColorHint="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/bakiye"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bakiye"
        android:layout_width="269dp"
        android:layout_height="47dp"
        android:layout_marginTop="264dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/btnn"
        android:ems="10"
        android:hint="Bakiye"
        android:inputType="numberDecimal"
        android:textColorHint="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/kaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kaydet"
        android:layout_width="162dp"
        android:layout_height="68dp"

        android:layout_marginStart="124dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="125dp"
        android:background="@drawable/olustur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bakiye" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="41dp"
        android:text="Kart Bilgisi Ekle"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/isim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>